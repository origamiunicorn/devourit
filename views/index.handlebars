<h1>{{type}}s!</h1>

<div class="row">
    <div class="col s6">
        <ol>
            {{#each pies}}
            {{#unless devoured}}
            {{> pies/pie-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ol>
    </div>

    <div class="col s6">
        <ol>
            {{#each pies}}
            {{#if devoured}}
            {{> pies/pie-block devoured=false}}
            {{/if}}
            {{/each}}
        </ol>
    </div>

    <div class="col s12">
        <h2>Add a {{type}}</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="pie">{{type}} Name:</label>
                <input type="text" id="pie" name="pieName">
            </div>

            <button type="submit">Add {{type}}</button>
        </form>
        <p class="flow-text">
            Don't see the kind of pie you want to eat here? Add another!
        </p>
    </div>
</div>